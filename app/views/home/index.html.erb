<h1>Welcome to My Bookstore!</h1>

<%= form_tag(root_path, method: "get") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search for books and Magazines...." %>
    <%= submit_tag "Search" %>
  <% end %>



<script>
  document.addEventListener('DOMContentLoaded', function() {
    const magazineDropdown = document.querySelector('#magazine-dropdown');
    if (magazineDropdown) {
      magazineDropdown.addEventListener('change', function() {
        const selectedMagazineId = this.value;
        if (selectedMagazineId) {
          window.location.href = '/magazines/' + selectedMagazineId;
        }
      });
    }
  });
</script>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Authors</th>
      <th>Magazines</th>
    </tr>
  </thead>
  <tbody>
    <% @books_with_magazines.each do |book| %>
      <tr>
      <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.authors %></td>
        <td>
          <ul>
            <% book.magazines.each do |magazine| %>
              <li><%= magazine.title %></li>
            <% end %>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @books_with_magazines %>